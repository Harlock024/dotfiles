configuration {
    show-icons: false;
}

* {
    selected:                   #89b4fa;
    active:                     #89b4fa;
    urgent:                     #f38ba8;
    background:                 #1e1e2e;
    background-alt:            #2a2b3c;
    foreground:                 #ffffff;
}

/*****----- Main Window -----*****/
window {
    transparency:               "real";
    location:                   east;
    anchor:                     east;
    fullscreen:                 false;
    width:                      115px;
    x-offset:                   -15px;
    y-offset:                   0px;

    enabled:                    true;
    margin:                     0px;
    padding:                    0px;
    border:                     2px solid;
    border-radius:              6px;
    border-color:               @selected;
    cursor:                     "default";
    background-color:           @background;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                    true;
    spacing:                    15px;
    margin:                     0px;
    padding:                    15px;
    border:                     0px solid;
    border-radius:              0px;
    background-color:           transparent;
    children:                   [ "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                    true;
    spacing:                    0px;
    margin:                     0px;
    padding:                    0px;
    border:                     0px;
    border-radius:              0px;
    background-color:           transparent;
    text-color:                 @foreground;
    children:                   [ "textbox-prompt-colon", "prompt"];
}

textbox-prompt-colon {
    enabled:                    true;
    expand:                     false;
    str:                        "ï€‘";
    padding:                    12px 16px;
    border-radius:              4px;
    background-color:           @selected;
    text-color:                 @background;
}

prompt {
    enabled:                    true;
    padding:                    12px;
    border-radius:              4px;
    background-color:           @selected;
    text-color:                 @background;
}

/*****----- Message -----*****/
message {
    enabled:                    true;
    margin:                     0px;
    padding:                    12px;
    border:                     0px;
    background-color:           @background-alt;
    text-color:                 @foreground;
}
textbox {
    background-color:           inherit;
    text-color:                 inherit;
    vertical-align:             0.5;
    horizontal-align:           0.5;
    placeholder-color:          @foreground;
    blink:                      true;
    markup:                     true;
}
error-message {
    padding:                    12px;
    border:                     0px;
    background-color:           @background;
    text-color:                 @foreground;
}

/*****----- Listview -----*****/
listview {
    enabled:                    true;
    columns:                    1;
    lines:                      5;
    cycle:                      true;
    dynamic:                    true;
    scrollbar:                  false;
    layout:                     vertical;
    reverse:                    false;
    fixed-height:               true;
    fixed-columns:              true;

    spacing:                    15px;
    margin:                     0px;
    padding:                    0px;
    background-color:           transparent;
    text-color:                 @foreground;
    cursor:                     "default";
}

/*****----- Elements -----*****/
element {
    enabled:                    true;
    spacing:                    0px;
    margin:                     0px;
    padding:                    20px 0px;
    background-color:           @background-alt;
    text-color:                 @foreground;
    cursor:                     pointer;
}

element-text {
    font:                       "feather bold 24";
    background-color:           transparent;
    text-color:                 inherit;
    cursor:                     inherit;
    vertical-align:             0.5;
    horizontal-align:           0.5;
}

element selected.normal {
    background-color:           @selected;
    text-color:                 @background;
}

